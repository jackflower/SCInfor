<?xml version="1.0"?>
<root type = "ground">

	<!-- CPhysical -->

	<!--nazwa obiektu-->
	<genre genre = "Static image test" />
	
	<!--zakres dla promienia kolizji-->
	<radius
		circle_radius = "45.25"
	/>
	
	<!--rozmiar obszaru prostokatnego-->
	<!--body - width-->
	<!--body - height-->
	<!--head - width-->
	<!--head - height-->	
	<rect_size
		rect_size_x = "64.0"
		rect_size_y = "64.0"	
		rect_size_body_x = "64.0"
		rect_size_body_y = "64.0"
		rect_size_head_x = "64.0"
		rect_size_head_y = "64.0"		
	/>
	
	<!--skala-->
	<scale
		scale_body = "1.0"
		scale_head = "0.5"
	/>

	<!--pulap obiektu wzgeldem podloza-->
	<altitude
		altitude = "1.0"
	/>

	<!--flagi decydujace o wygladzie obiektu-->
	<!--description:  -->
	<physical_config
		use_displayable_body  = "true"
		use_shadow_body       = "true"
		use_displayable_head  = "true"
		use_shadow_head       = "true"
	/>
	
	<!--obraz statyczny-->
	<!--nazwa pliku z reprezentacja graficzna body-->
	<!--nazwa pliku z reprezentacja graficzna head-->
	<static_image
		image_name_body = "../data/proxima.png"
		image_name_head = "../data/proxima.png"
	/>
  
</root>
