<?xml version="1.0"?>
<root type = "solarcell">

	<!--CPhysical-->

	<!--nazwa obiektu-->
	<genre genre = "Solarcell power module" />
	
	<!--zakres dla promienia kolizji-->
	<radius
		circle_radius = "22.627417"
	/>
	
	<!--rozmiar obszaru prostokatnego-->
	<!--width-->
	<!--height-->
	<!--body - width-->
	<!--body - height-->
	<!--head - width-->
	<!--head - height-->	
	<rect_size
		rect_size_x = "32.0"
		rect_size_y = "32.0"
		rect_size_body_x = "32.0"
		rect_size_body_y = "32.0"
		rect_size_head_x = "32.0"
		rect_size_head_y = "32.0"		
	/>
	
	<!--skala-->
	<scale
		scale_body = "1.0"
		scale_head = "1.0"
	/>

	<!--pulap obiektu wzgledem podloza-->
	<altitude
		altitude = "1.0"
	/>

	<!--flagi decydujace o wygladzie obiektu-->
	<physical_config
		use_displayable_body  = "true"
		use_shadow_body       = "true"
		use_displayable_head  = "true"
		use_shadow_head       = "true"
	/>

	<!--flagi decydujace o kolidowaniu poszczegolnych skladowych-->
	<!--bool flaga kolidowania - body (default true)-->
	<!--bool flaga kolidowania - body shadow-->
	<!--bool flaga kolidowania - head-->
	<!--bool flaga kolidowania - head shadow-->
	<colliding_config
		colliding_body			= "true"
		colliding_body_shadow	= "false"
		colliding_head			= "false"
		colliding_head_shadow	= "false"
	/>	
	
	<!--CActor-->
	
	<!--dane techniczne-->
	<technical_data
		mass        = "126"
		speed       = "0"
		movabled    = "false"
	/>

	<!--zestawy animacji-->
	<!--nazwa animacji musi byc zgodna z nazwami zarejestrowqanymi, class CAnimationManager-->
	<!--typ animacji musi byc zgodny z wpisami w tablicy zawierajcej zdefiniowane typy animacji, class CAnimSet-->
	<animset name_animset = "animset_solarcell_one">
		<!--body-->
		<anim name = "anim_solarcell_body_default"			type = "solarcell_body_default"			/>
		<anim name = "anim_solarcell_body_update_energy"	type = "solarcell_body_update_energy"	/>
		<anim name = "anim_solarcell_body_damage"			type = "solarcell_body_damage"			/>
		<anim name = "anim_solarcell_body_death"			type = "solarcell_body_death"			/>
		<!--head-->
		<anim name = "anim_solarcell_head_default"			type = "solarcell_head_default"			/>
		<anim name = "anim_solarcell_head_update_energy"	type = "solarcell_head_update_energy"	/>
		<anim name = "anim_solarcell_head_damage"			type = "solarcell_head_damage"			/>
		<anim name = "anim_solarcell_head_death"			type = "solarcell_head_death"			/>
	</animset>

	<animset name_animset = "animset_solarcell_two">
		<!--body-->
		<anim name = "anim_solarcell_body_default"			type = "solarcell_body_default"			/>
		<anim name = "anim_solarcell_body_update_energy"	type = "solarcell_body_update_energy"	/>
		<anim name = "anim_solarcell_body_damage"			type = "solarcell_body_damage"			/>
		<anim name = "anim_solarcell_body_death"			type = "solarcell_body_death"			/>
		<!--head-->
		<anim name = "anim_solarcell_head_default"			type = "solarcell_head_default"			/>
		<anim name = "anim_solarcell_head_update_energy"	type = "solarcell_head_update_energy"	/>
		<anim name = "anim_solarcell_head_damage"			type = "solarcell_head_damage"			/>
		<anim name = "anim_solarcell_head_death"			type = "solarcell_head_death"			/>
	</animset>

	<!--CSolarCell-->

	<!--std::string nazwa fotoogniwa-->
	<!--float energia, ktora moze zostac zgromadzona-->
	<!--float moc-->
	<!--float czas, co jaki nastepuje proces ladowania fotoogniwa-->
	<!--float predkosc obrotu obiektu-->

	<solarcell_config
		solarcell_name  = "Solarcell default"
		stored_energy   = "100"
		power           = "1.125"
		energy_duration = "1"
		rotation_speed  = "10"
	/>

</root>
