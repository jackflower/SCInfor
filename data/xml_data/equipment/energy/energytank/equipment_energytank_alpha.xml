<?xml version="1.0"?>
<root type = "energytank">

	<!--CPhysical-->

	<!--nazwa obiektu-->
	<genre genre = "Alpha energy tank" />
	
	<!--zakres dla promienia kolizji-->
	<radius
		circle_radius = "11.3137085"
	/>
	
	<!--rozmiar obszaru prostokatnego-->
	<!--width-->
	<!--height-->
	<!--body - width-->
	<!--body - height-->
	<!--head - width-->
	<!--head - height-->	
	<rect_size
		rect_size_x = "16.0"
		rect_size_y = "16.0"
		rect_size_body_x = "16.0"
		rect_size_body_y = "16.0"
		rect_size_head_x = "16.0"
		rect_size_head_y = "16.0"		
	/>	
	
	<!--skala-->
	<scale
		scale_body = "1.0"
		scale_head = "1.0"
	/>

	<!--pulap obiektu wzgeldem podloza-->
	<altitude
		altitude = "1.0"
	/>

	<!--flagi decydujace o wygladzie obiektu-->
	<physical_config
		use_displayable_body  = "true"
		use_shadow_body       = "false"
		use_displayable_head  = "true"
		use_shadow_head       = "false"
	/>

	<!--flagi decydujace o kolidowaniu poszczegolnych skladowych-->
	<!--bool flaga kolidowania - body (default true)-->
	<!--bool flaga kolidowania - body shadow-->
	<!--bool flaga kolidowania - head-->
	<!--bool flaga kolidowania - head shadow-->
	<colliding_config
		colliding_body			= "true"
		colliding_body_shadow	= "false"
		colliding_head			= "false"
		colliding_head_shadow	= "false"
	/>	
	
	<!--CActor-->
	
	<!--dane techniczne-->
	<technical_data
		mass        = "4.68"
		speed       = "0"
		movabled    = "false"
	/>

	<!--zestawy animacji-->
	<!--nazwa animacji musi byc zgodna z nazwami zarejestrowqanymi - class CAnimationManager-->
	<!--typ animacji musi byc zgodny z wpisami w tablicy zawierajacej zdefiniowane typy animacji - class CAnimSetEquipment-->
	<animset name_animset = "animset_energytank_alpha_one">
		<!--body-->
		<anim name = "animation_equipment_energytank_body_default"	type = "energytank_body_default"/>
		<anim name = "animation_equipment_energytank_body_reserve"	type = "energytank_body_reserve"/>
		<anim name = "animation_equipment_energytank_body_empty"	type = "energytank_body_empty"	/>
		<anim name = "animation_equipment_energytank_body_damage"	type = "energytank_body_damage"	/>
		<!--head-->
		<anim name = "animation_equipment_energytank_head_default"	type = "energytank_head_default"/>
		<anim name = "animation_equipment_energytank_head_reserve"	type = "energytank_head_reserve"/>
		<anim name = "animation_equipment_energytank_head_empty"	type = "energytank_head_empty"	/>
		<anim name = "animation_equipment_energytank_head_damage"	type = "energytank_head_damage"	/>
	</animset>

	<animset name_animset = "animset_energytank_alpha_two">
		<!--body-->
		<anim name = "animation_equipment_energytank_body_default"	type = "energytank_body_default"/>
		<anim name = "animation_equipment_energytank_body_reserve"	type = "energytank_body_reserve"/>
		<anim name = "animation_equipment_energytank_body_empty"	type = "energytank_body_empty"	/>
		<anim name = "animation_equipment_energytank_body_damage"	type = "energytank_body_damage"	/>
		<!--head-->
		<anim name = "animation_equipment_energytank_head_default"	type = "energytank_head_default"/>
		<anim name = "animation_equipment_energytank_head_reserve"	type = "energytank_head_reserve"/>
		<anim name = "animation_equipment_energytank_head_empty"	type = "energytank_head_empty"	/>
		<anim name = "animation_equipment_energytank_head_damage"	type = "energytank_head_damage"	/>
	</animset>
	
	<!--CEnergyTank-->
	<!--nazwa akulatora energii-->
	<!--pojemnosc akumulatora energii-->
	<!--energia /zycie/ obiektu-->
	<!--predkość wirowania wskaznika stanu akumulatora-->
	<energytank_config
		energy_tank_name			= "Alpha energy tank"
		energy_tank_capacity		= "100"
		energy						= "75"
		energy_tank_rotation_speed	= "1200"
 	/>
</root>
